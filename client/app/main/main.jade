.container(ng-show='isLoggedIn()')
  p.lead What's happening?
  .row
    .col-lg-12(ng-repeat='happening in happenings')
      .panel.panel-primary
        .panel-heading
          h3.panel-title {{happening.when}} 
           a(href='#') {{happening.who}}
        .panel-body
          p. {{happening.what | limitTo:whatHappeningLimit}} 
          a(ng-show='exceedsWhatHappeningLimit("{{happening.what}}")' href='#') more...
          


